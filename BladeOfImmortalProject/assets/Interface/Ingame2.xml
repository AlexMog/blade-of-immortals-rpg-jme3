<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- start screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <screen id="InGameScreen" controller="mygame.Main">
        <layer id="layer" childLayout="vertical">
            <panel id="leftPanel" height="75%" width="100%" align="right" valign="center" childLayout="center" visibleToMouse="false">

            </panel>
            
            
            <panel id="panel" height="25%" width="100%" align="center" valign="top" childLayout="horizontal" visibleToMouse="true">
                <panel id="leftPanel" height="100%" width="40%" align="left" valign="center" backgroundImage="Interface/Images/Ingame/Elements/ingame2.png" childLayout="vertical" visibleToMouse="true">
                    <effect>
                        <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="400" inherit="true"/>
                        <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="400" inherit="true"/>
                    </effect>
                    <panel id="bar1" childLayout="center" width="100%" height="50%" padding="4px,60px,10px,4px">
                        <panel id="bar1_inside" childLayout="center" width="60%" height="30%" align="right" valign="bottom" padding="4px,4px,0px,20px">
                            <text id="text" font="aurulent-sans-16.fnt" color="#000f" text="100/100" align="center" valign="center" />
                        </panel>
                    </panel>
                    <panel id="bar2" childLayout="center" width="100%" height="50%" padding="0px,60px,4px,4px">
                        <panel id="bar2_inside" childLayout="center" width="60%" height="30%" align="right" valign="top" padding="4px,4px,0px,20px">
                            <text id="text" font="aurulent-sans-16.fnt" color="#000f" text="100/100" align="center" valign="center" />
                        </panel>
                    </panel>
                    
                    
                </panel>
                <panel id="rightPanel" height="50%" width="20%" align="right" valign="center" backgroundImage="Interface/Images/Ingame/Elements/hitlist_big.png" childLayout="center" visibleToMouse="true">
                    <text id="text" font="Interface/Fonts/VictorianLET.fnt" color="#000f" text="Ares" align="center" valign="bottom" />
                </panel>
                <image height="100%" width="20%" align="right" valign="center">
                    <effect>
                        

                    </effect>
                    
                </image>
            </panel>
            


        </layer>
    </screen>
</nifty>