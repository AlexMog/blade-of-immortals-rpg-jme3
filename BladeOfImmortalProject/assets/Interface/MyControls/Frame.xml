<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- start screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="start" controller="mygame.Main">
        <layer id="layer" backgroundColor="#003f" childLayout="vertical" width="100%" height="100%">
            <!-- Top Border -->
            <panel childLayout="horizontal" align="center" valign="top" width="100%" height="15px"  visibleToMouse="false">
                <panel id="top-left" height="15" width="15" align="left" valign="top" backgroundColor="#ff0f" childLayout="center" visibleToMouse="false">
                    <text font="aurulent-sans-16.fnt" color="#000f" text="TL" align="center" valign="center" />
                </panel>
                <panel id="top-center" height="15" width="*" align="left" valign="top" backgroundColor="#f60f" childLayout="center" visibleToMouse="false">

                    <text id="text" font="aurulent-sans-16.fnt" color="#000f" text="TC" align="center" valign="center" />
                </panel>
                <panel id="top-right" height="15" width="15" align="right" valign="top" backgroundColor="#ff0f" childLayout="center" visibleToMouse="false">

                    <text id="text" font="aurulent-sans-16.fnt" color="#000f" text="TR" align="center" valign="center" />
                </panel>
                
            </panel>
            
            <!-- CENTER -->
            <panel width="100%" height="*" align="center" valign="center" childLayout="horizontal">
                <panel id="center-left" height="100%" width="15" align="left" valign="center" backgroundColor="#ff0f" childLayout="center" visibleToMouse="false">
                </panel>
                <panel id="center-center" height="100%" width="*" align="center" valign="center" backgroundColor="#ffff" childLayout="center" visibleToMouse="false">

                    <text id="text" font="aurulent-sans-16.fnt" color="#000f" text="HelloWorld" align="left" valign="top" />
                </panel>
                <panel id="center-right" height="100%" width="15" align="right" valign="center" backgroundColor="#ff0f" childLayout="center" visibleToMouse="false">
                </panel>
            </panel>
            <!-- Bottom Border -->
            <panel childLayout="horizontal" align="center" valign="bottom" width="100%" height="15px"  visibleToMouse="false">
                <panel id="bottom-left" height="15" width="15" align="left" valign="bottom" backgroundColor="#ff0f" childLayout="center" visibleToMouse="false">

                    <text font="aurulent-sans-16.fnt" color="#000f" text="BL" align="center" valign="center" />
                </panel>
                <panel id="bottom-center" height="15" width="*" align="left" valign="bottom" backgroundColor="#f60f" childLayout="center" visibleToMouse="false">

                    <text id="text" font="aurulent-sans-16.fnt" color="#000f" text="BC" align="center" valign="center" />
                </panel>
                <panel id="bottom-right" height="15" width="15" align="right" valign="bottom" backgroundColor="#ff0f" childLayout="center" visibleToMouse="false">

                    <text id="text" font="aurulent-sans-16.fnt" color="#000f" text="BR" align="center" valign="center" />
                </panel>
                
            </panel>
        </layer>
    </screen>
</nifty>
